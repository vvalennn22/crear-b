class Suma:
    def __init__(self, num1, num2):
        self.num1 = num1
        self.num2 = num2

    def sumar(self):
        resultado = self.num1 + self.num2
        print(f"La suma de {self.num1} + {self.num2} es {resultado}")


if __name__ == "__main__":
    suma = Suma(5, 7)
    suma.sumar()

